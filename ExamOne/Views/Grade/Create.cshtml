@model ExamOne.Framework.Grade
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-lable"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.studentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-lable"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.subjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GradeValue" class="control-lable"></label>
                <input asp-for="GradeValue" class="form-control" />
                <span asp-validation-for="GradeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>